@page
@model Mappe.IndexModel
@{
    ViewData["Title"] = "Autovelox List";
}

<h2>Autovelox</h2>

<p>
    <a class="btn btn-primary" asp-page="Create">Add New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Comune</th>
            <th>Provincia</th>
            <th>Regione</th>
            <th>Latitudine</th>
            <th>Longitudine</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var map in Model.AutoveloxList)
        {
            <tr>
                <td>@map.Id</td>
                <td>@map.Nome</td>
                <td>@map.ComuneNome</td>
                <td>@map.ProvinciaNome</td>
                <td>@map.RegioneNome</td>
                <td>@map.Latitudine</td>
                <td>@map.Longitudine</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@map.Id">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

